<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aqua Trip - Explore os melhores aquários do mundo</title>
    <link rel="stylesheet" href="css/aquario.css">
    <script src="script.js"></script>
</head>
<body>
<header>
       
        <nav>  
        <a href=/index.ejs>
        <img href="/index.ejs" class="logo" src="img/AquaTrip.png"></a>
        
        </nav>
        <form class="search-box" action="/Ilhagalapagos" method="get">
        <input type="search" name="q" placeholder="Digite sua busca..." required>
        <button type="submit" class="buscartung">Buscar</button>
        </form>
        <nav>
            <ul>
                <li><a href="/login"><span class="logintexto">Fazer Login</span></a></li>
            </ul>
        </nav>
    </header>

    <!-- Navigation Back Button -->
    <nav class="nav-back"><a href="index.ejs">
        <button class="back-btn" aria-label="Voltar">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5"></path>
                <path d="M12 19l-7-7 7-7"></path>
            </svg>
        </button></a>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Hero Section -->
        <section class="hero-section">
            <section class="hero-image">
                <img src="img/aquariosbingo.jpg" alt="Aquário subaquático" />
                <section class="hero-overlay">
                    <h1 class="hero-title">Explore os melhores aquários do mundo</h1>
                </section>
            </section>
        </section>

        <!-- Discovery Section -->
        <section class="discovery-section">
            <h2 class="section-title">Descubra seu próximo passeio</h2>
            
            <section class="aquarium-grid">
                <section class="aquarium-card">
                    <section class="card-image">
                        <img src="img/aquariosp.png" alt="Aquário de São Paulo" />
                    </section>
                    <section class="card-content">
                        <h3 class="card-title">Aquário de São Paulo</h3>
                        <section class="rating">
                            <span class="rating-score">5,0</span>
                            <section class="stars">
                                <span class="star filled">★</span>
                                <span class="star filled">★</span>
                                <span class="star filled">★</span>
                                <span class="star filled">★</span>
                                <span class="star filled">★</span>
                            </section>
                        </section>
                        <p class="card-price">a partir de R$ 120 por pessoa</p>
                    </section>
                </section>

                <section class="aquarium-card">
                    <section class="card-image">
                        <img src="img/aquaRio.webp" alt="AquaRio" />
                    </section>
                    <section class="card-content">
                        <h3 class="card-title">AquaRio</h3>
                        <section class="rating">
                            <span class="rating-score">4,8</span>
                            <section class="stars">
                                <span class="star filled">★</span>
                                <span class="star filled">★</span>
                                <span class="star filled">★</span>
                                <span class="star filled">★</span>
                                <span class="star filled">★</span>
                            </section>
                        </section>
                        <p class="card-price">a partir de R$ 120 por pessoa</p>
                    </section>
                </section>
            </section>
        </section>

        <!-- Featured Section -->
        <section class="featured-section">
            <h2 class="section-title">Sea Life Bangkok Ocean World</h2>
            
            <section class="featured-grid">
                <section class="featured-card large">
                    <img src="img/bangkok3.webp" alt="Sea Life Bangkok - Tubarões" />
                </section>
                
                <section class="featured-card small">
                    <img src="img/bangkok1.jpg" alt="Sea Life Bangkok - Vida marinha" />
                </section>
                
                <section class="featured-card small">
                    <img src="img/bangkok2.jpg" alt="Sea Life Bangkok - Aquário" />
                </section>
            </section>
        </section>
    </main>
</body>
</html>

