<%- include('../partials/header') %>

<main style="display:flex;justify-content:center;align-items:center;flex-direction:column;padding:40px;">
    <h2>Login</h2>

    <% if (errors.length > 0) { %>
        <ul style="color:red;">
            <% errors.forEach(err => { %>
                <li><%= err.msg %></li>
            <% }) %>
        </ul>
    <% } %>

    <form action="/login" method="POST" style="display:flex;flex-direction:column;width:300px;gap:10px;">
        <input type="email" name="email" placeholder="E-mail" value="<%= old.email || '' %>" required>
        <input type="password" name="password" placeholder="Senha" required>
        <button type="submit" style="background:#007bff;color:#fff;padding:10px;border:none;border-radius:5px;">Entrar</button>
    </form>
</main>

<%- include('../partials/footer') %>